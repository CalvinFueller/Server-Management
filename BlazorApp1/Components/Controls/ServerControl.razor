@if(server != null)
{
	<EditForm Model="server" FormName="serverForm" OnValidSubmit="Submit">
		<InputNumber @bind-Value="server.ServerId" hidden></InputNumber>
		<InputText @bind-Value="server.Name" class="form-control" hidden></InputText>
		<InputText @bind-Value="server.City" class="form-control" hidden></InputText>
		<InputCheckbox @bind-Value="server.IsOnline" class="form-check-input" hidden></InputCheckbox>

		<div data-name="@server.Name" data-status="Server is @(server.IsOnline ? "online" : "offline")" style="@($"color: {(server.IsOnline ? "green" : "red")}")">
			@server.Name is in server.City and is currently @(server.IsOnline ? "online" : "offline")
			&nbsp;
			<button class="btn btn-primary" type="submit">Turn on/off</button>
		</div>
	</EditForm>
}

@code {
	[SupplyParameterFromForm]
	private Server? server { get; set; }

	protected override void OnParametersSet()
	{
		server ??= new Server(){Name = "Server1", City = "Toronto"};
	}

	private void Submit()
	{
		if(server != null)
		{
			server.IsOnline = !server.IsOnline;
		}
	}
}
